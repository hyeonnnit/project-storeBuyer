{{> layout/header}}

<div class="container" style="margin-top: 5%; margin-bottom: 5%">
    <form id="productForm" action="/product/1/update" method="post">
        <div class="row">


            <!-- 상품 정보 입력 섹션 -->

                <div class="col-lg-6 px-xl-10">
                    <div class="mb-3 mt-3">
                        상 품 명 : <input name="name" type="text" class="form-control" value="상품명">
                    </div>
                    <div class="mb-3 mt-3">
                        상품가격 : <input name="price" type="number" class="form-control" value="상품가격">
                    </div>
                    <div class="mb-3 mt-3">
                        상품수량 : <input name="qty" type="number" class="form-control" value="상품수량">
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary mt-3">수정완료</button>
                    </div>
                </div>

        </div>
    </form>
</div>

{{> layout/footer}}
